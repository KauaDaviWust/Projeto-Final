<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.feevale.EncontrarLivroControle">

   <children>

      <Label text="Livros nÃ£o retirados">
         <font>
            <Font size="24.0" />
         </font>
      </Label>

      <!-- Scroll 1 -->
      <ScrollPane fitToWidth="true" prefHeight="500.0" VBox.vgrow="ALWAYS">
         <content>
            <VBox alignment="TOP_CENTER" prefWidth="Infinity" spacing="10">
               <children>

                  <GridPane fx:id="nRetirados" gridLinesVisible="true">
                    <columnConstraints>
                      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label alignment="CENTER" text="Imagem" />
                        <Label contentDisplay="CENTER" text="Nome" GridPane.columnIndex="1">
                           <GridPane.margin>
                              <Insets />
                           </GridPane.margin></Label>
                        <Label contentDisplay="CENTER" text="Local" GridPane.columnIndex="2" />
                     </children>
                     <VBox.margin>
                        <Insets left="50.0" right="50.0" />
                     </VBox.margin>
                  </GridPane>

               </children>
            </VBox>
         </content>
      </ScrollPane>

      <Label text="Livros retirados">
         <font>
            <Font size="24.0" />
         </font>
      </Label>

      <!-- Scroll 2 -->
      <ScrollPane fitToWidth="true" prefHeight="500.0" VBox.vgrow="ALWAYS">
         <content>
            <VBox alignment="TOP_CENTER" prefWidth="Infinity" spacing="10">
               <children>

                  <GridPane fx:id="retirados" alignment="CENTER" gridLinesVisible="true">
                     <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label alignment="CENTER" text="Imagem" />
                        <Label alignment="CENTER" text="Titulo" GridPane.columnIndex="1" />
                        <Label alignment="CENTER" text="Nome de quem retirou" GridPane.columnIndex="2" />
                     </children>
                     <VBox.margin>
                        <Insets left="50.0" right="50.0" />
                     </VBox.margin>
                  </GridPane>

               </children>
            </VBox>
         </content>
      </ScrollPane>

      <Button mnemonicParsing="false" onAction="#irInicio" text="Voltar">
         <font><Font size="14.0" /></font>
      </Button>

   </children>

</VBox>
