<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600.0" prefWidth="600.0" stylesheets="@perfil.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.feevale.PerfilControle">

    <children>
        <BorderPane VBox.vgrow="ALWAYS">

            <!-- TOPO -->
            <top>
                <HBox fx:id="cabecalho" alignment="CENTER_RIGHT" prefHeight="80.0" style="-fx-background-color: #36c000ff" BorderPane.alignment="CENTER">
                    <children>
                        <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                            <children>
                                <Hyperlink fx:id="logo" styleClass="hyperlink" text="Biblioteca">
                                    <font><Font size="36.0" /></font>
                                </Hyperlink>
                            </children>
                            <HBox.margin><Insets /></HBox.margin>
                        </VBox>
                    </children>
                </HBox>
            </top>

            <!-- CENTRO -->
            <center>
                <ScrollPane fitToHeight="false" fitToWidth="true" BorderPane.alignment="TOP_CENTER">
                    <content>
                        <VBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="100.0">
                            <children>

                                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                    <VBox.margin><Insets top="20.0" /></VBox.margin>
                                    <image><Image url="@imgs/perfil.png" /></image>
                                </ImageView>

                                <Label fx:id="nome" text="Nome" textAlignment="CENTER">
                                    <font><Font size="29.0" /></font>
                                </Label>

                                <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
                                    <children>
                                        <Button fx:id="retirar" mnemonicParsing="false" onAction="#irRetirada" prefWidth="100.0" text="Retirar" />
                                        <Button fx:id="devolve" mnemonicParsing="false" onAction="#irDevolver" prefWidth="100.0" text="Devolução">
                                            <HBox.margin><Insets left="50.0" /></HBox.margin>
                                        </Button>
                                    </children>
                                    <VBox.margin><Insets top="20.0" /></VBox.margin>
                                </HBox>

                                <Label fx:id="reservados" text="Reservados" textAlignment="CENTER">
                                    <VBox.margin><Insets top="20.0" /></VBox.margin>
                                    <font><Font size="32.0" /></font>
                                </Label>

                                <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
                                    <children>
                                        <GridPane fx:id="tabela" alignment="CENTER" gridLinesVisible="true" prefHeight="57.0">

                                            <columnConstraints>
                                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                            </columnConstraints>

                                            <rowConstraints>
                                                <RowConstraints minHeight="30.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
                                            </rowConstraints>

                                            <children>
                                                <Label alignment="CENTER" text="Imagem">
                                       <font>
                                          <Font size="15.0" />
                                       </font></Label>
                                                <Label alignment="CENTER" text="Titulo" GridPane.columnIndex="1">
                                       <font>
                                          <Font size="15.0" />
                                       </font></Label>
                                                <Label alignment="CENTER" text="autor" GridPane.columnIndex="2">
                                       <font>
                                          <Font size="15.0" />
                                       </font></Label>
                                                <Label alignment="CENTER" text="data de devolução" GridPane.columnIndex="3">
                                       <font>
                                          <Font size="15.0" />
                                       </font></Label>
                                            </children>

                                        </GridPane>
                                    </children>
                                </HBox>

                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
            </center>

            <!-- RODAPÉ -->
            <bottom>
                <HBox fx:id="rodape" alignment="CENTER_RIGHT" prefHeight="50.0" style="-fx-background-color: #36c000ff" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="sair" mnemonicParsing="false" onAction="#sair" text="Sair">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Button>
               </children></HBox>
            </bottom>

        </BorderPane>
    </children>

</VBox>
